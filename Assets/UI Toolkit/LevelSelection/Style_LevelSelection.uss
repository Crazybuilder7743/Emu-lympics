:root {
}

.exitButton {
    position: absolute;
    width: 300px;
    min-width: 300px;
    max-width: 300px;
    height: 100px;
    min-height: 100px;
    max-height: 100px;
    background-color: rgb(33, 212, 210);
    top: 960px;
    left: 30px;
    transition-duration: 0.1s;
}

.exitButton:hover {
    scale: 1.1 1.1;
    transform-origin: left bottom;
    transition-duration: 0.1s;
}
